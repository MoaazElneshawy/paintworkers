<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C8C7C2</item>
        <item name="colorPrimaryVariant">#C8C7C2</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#C8C7C2</item>
        <item name="android:textColor">@color/dark</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Rating bar  -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#D1D1D1</item>
        <item name="colorControlActivated">#DBA800</item>
    </style>

</resources>